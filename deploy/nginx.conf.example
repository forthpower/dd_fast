# Nginx反向代理配置示例
# 将文件复制到 /etc/nginx/sites-available/dd_fast
# 然后创建软链接: ln -s /etc/nginx/sites-available/dd_fast /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # 替换为您的域名或IP

    # 日志配置
    access_log /var/log/nginx/dd_fast_access.log;
    error_log /var/log/nginx/dd_fast_error.log;

    # 反向代理到Flask应用
    location / {
        proxy_pass http://127.0.0.1:5012;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket支持（如果需要）
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # 静态文件直接服务（可选，提高性能）
    location /static/ {
        alias /opt/dd_fast/feature/workflow/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}

